{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "**/tsconfig*.json",
    "internal/node-utils/*.json",
    "internal/node-utils/src/*.ts",
    "internal/vite-config/*.json",
    "internal/vite-config/src/*.ts"
  ],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
